[Unit]
Description=Release GPIO stepper motors on startup
DefaultDependencies=false

[Service]
Type=oneshot
# Note: `exec` is needed for `$(/usr/bin/forklift ...)` to be evaluated
ExecStart=/bin/bash -c "exec $(/usr/bin/forklift --workspace /home/pi plt locate-depl-pkg host/planktoscope/gpio-init)/release-gpio-steppers.sh"
Restart=no

[Install]
WantedBy=sysinit.target
