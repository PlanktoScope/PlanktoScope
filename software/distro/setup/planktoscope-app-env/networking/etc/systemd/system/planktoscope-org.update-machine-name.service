[Unit]
Description=Update a file with the machine name generated from the Raspberry Pi's serial number

[Service]
Type=oneshot
# Note: `exec` is needed for `$(/usr/bin/forklift ...)` to be evaluated
ExecStart=/usr/bin/bash -c "exec $(/usr/bin/forklift --workspace /home/pi plt locate-depl-pkg host/planktoscope/machine-name)/machine-name/update.sh"
Restart=no

[Install]
WantedBy=multi-user.target
