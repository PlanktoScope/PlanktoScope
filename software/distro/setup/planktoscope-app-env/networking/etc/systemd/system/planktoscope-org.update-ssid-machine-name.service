[Unit]
Description=Update hostapd SSID based on machine name generated from the Raspberry Pi's serial number
Before=hostapd.service

[Service]
Type=oneshot
ExecStart="$(/home/pi/.local/bin/forklift --workspace /home/pi plt locate-depl-pkg host/planktoscope/machine-name)/update-ssid.sh"
Restart=no

[Install]
WantedBy=hostapd.service
