[Unit]
Description=Update dnsmasq hosts based on machine name generated from the Raspberry Pi's serial number
Before=dnsmasq.service
Before=network-pre.service
Wants=network-pre.target

[Service]
Type=oneshot
ExecStart="$(/home/pi/.local/bin/forklift --workspace /home/pi plt locate-depl-pkg host/planktoscope/machine-name)/update-hosts.sh"
Restart=no

[Install]
WantedBy=dnsmasq.service
