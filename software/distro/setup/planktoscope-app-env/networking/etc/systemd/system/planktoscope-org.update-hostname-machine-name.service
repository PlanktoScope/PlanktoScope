[Unit]
Description=Update hostname based on machine name generated from the Raspberry Pi's serial number
Before=dnsmasq.service
Before=network-pre.service
Wants=network-pre.target
Before=avahi-daemon.service

[Service]
Type=oneshot
ExecStart="$(/usr/bin/forklift --workspace /home/pi plt locate-depl-pkg host/planktoscope/machine-name)/update-hostname.sh"
Restart=no

[Install]
WantedBy=dnsmasq.service
WantedBy=avahi-daemon.service
