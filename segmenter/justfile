setup:
    poetry lock && poetry install --with=dev
    sudo cp ../os/python-hardware-controller/etc/systemd/system/planktoscope-org.segmenter.service /etc/systemd/system/
    sudo systemctl daemon-reload
    sudo systemctl enable planktoscope-org.segmenter.service
    sudo systemctl restart planktoscope-org.segmenter.service

dev:
    sudo systemctl stop planktoscope-org.segmenter.service
    poetry run python -u main.py

format:
    just --fmt --unstable
    poetry run poe fmt

test:
    just --fmt --check --unstable
    poetry run poe check
